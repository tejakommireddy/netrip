        integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <title>Netrip</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

    <link rel="stylesheet" href="/css/custom_style.css">
    <link rel="stylesheet" href="/css/messages.css">
</head>

<body style="background-color: rgba(211, 211, 211, 0.3);">

  <nav class="navbar navbar-expand-sm navbar-dark navbar-brand-center  bg-dark" style="background-color: grey; height: 50px;">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbar">
        <h4 class="text-light mx-auto navbar-brand-custom">Netrip</h4>
        
          
        </ul>
    </div>
</nav>

<div class="container-fluid row justify-content-center">
  <div class="col-sm-8 col-md-8 col-lg-6 col-xl-6">
    <div class="card  box-shadow-transition mt-4 ">
      <h4 class="text-center card-header">Login</h4>
      <div class="card-body">
        <form action="/auth/login" class="text-center" method="post">
          <div class="form-group row">
            <div class="col-3 col-form-label text-md-right">
              <label for="username_or_email"><i class="fa fa-envelope mr-2" style="font-size:1.5rem;"> :</i></label>
            </div>
            <div class="col-6 ">
              <input type="text" class="form-control" placeholder="Username or Email" name="username_or_email" id="username_or_email" required>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-3 col-form-label text-md-right">
              <label for="password"><i class="fa fa-lock mr-2" style="font-size:1.65rem;"> :</i></label>
            </div>
            <div class="col-6">
              <input type="password" class="form-control" placeholder="Password" name="password" id="password" required>
            </div>
          </div>
          <div class="form-group text-center">
            
            <button type="submit" class="btn btn-primary">Submit</button><br><br>
            Don't have an account?<a href="/auth/signup"> Sign up</a>
          </div>
          <%- messages() %>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
